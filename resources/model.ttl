:CQ5 a sh:NodeShape ;
  sh:name "Saliva tests"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "Which tests are saliva tests?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?test
      WHERE {
        FILTER NOT EXISTS {
          ?test a act:AntigenCovidTest ;
            act:biospecimenCollectionMethod/skos:prefLabel "saliva"@en .
        }
      }
    """
  ] .

:CQ6 a sh:NodeShape ;
  sh:name "Tests' URLs in the EU database"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "What is the URL of a given test in the EU database?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?url
      WHERE {
        FILTER NOT EXISTS {
          ?test a act:AntigenCovidTest ;
            schema:url ?url .

          # TODO: Make this more explicit rather than rely on substring matching?
          FILTER strstarts(str(?url), "https://covid-19-diagnostics.jrc.ec.europa.eu")
        }
      }
    """
  ] .

:CQ7 a sh:NodeShape ;
  sh:name "Author of PEI evaluations"@en ;
  sh:targetNode <https://www.pei.de> ;
  sh:sparql [
    sh:message "What organisation created the PEI evaluation?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?organization_name
      WHERE {
        FILTER NOT EXISTS {
          VALUES ?class {
            ncit:C41394
            ncit:C41395
          }

          [] dcterms:creator $this ;
            a ?class .

          $this a schema:Organization ;
            schema:name ?organization_name .
        }
      }
    """
  ] .

:CQ8 a sh:NodeShape ;
  sh:name "Test's UK evaluation"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "Does a given test pass in the UK evaluation?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?test
      WHERE {
        FILTER NOT EXISTS {
          ?test a act:AntigenCovidTest .

          [] reg:representationOf ?test ;
            reg:register/dcterms:identifier "UK" ;
            reg:status/skos:prefLabel "Approved"@en .
        }
      }
    """
  ] .

:CQ9 a sh:NodeShape ;
  sh:name "ICMR's country"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "What country does the ICMR evaluation come from?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?country
      WHERE {
        FILTER NOT EXISTS {
          ?register a reg:Register ;
            dcterms:identifier "ICMR" ;
            reg:owner/schema:address/schema:addressCountry ?country . 
        }
      }
    """
  ] .

:CQ10 a sh:NodeShape ;
  sh:name "PEI degree"@en ;
  sh:message "What is the degree according to PEI of a given test and what does it mean? (the description of degree)"@en ;
  sh:targetClass skos:Concept ;
  sh:or (
    [
      sh:not [
        sh:path skos:inScheme ;
        sh:hasValue <https://covidtesty.vse.cz/data/concept-scheme/citlivost-pei/stupen>
      ]
    ]
    [
      sh:path skos:definition ;
      sh:minCount 1
    ]
  ) .

:CQ11 a sh:NodeShape ;
  sh:name "PEI's highest total sensitivity"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "Which tests have the highest total sensitivity according to PEI?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?test
      WHERE {
        FILTER NOT EXISTS {
          SELECT ?test
          WHERE {
            ?test a act:AntigenCovidTest .
            
            [] a ncit:C41394 ;
              dcterms:subject ?test ;
              dcterms:creator <https://www.pei.de> ;
              act:peiSensitivityCategory [] ; # TODO: What is "total sensitivity"?
              rdf:value ?total_sensitivity .
          }
          ORDER BY DESC(?total_sensitivity)
          LIMIT 1
        }
      }
    """
  ] .

:CQ12 a sh:NodeShape ;
  sh:name "Manufacturer-declared test sensitivity"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "What is the sensitivity of given tests according to their manufacturers?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?sensitivity
      WHERE {
        FILTER NOT EXISTS {
          [] a ncit:C41394 ;
            dcterms:subject/schema:manufacturer ?manufacturer ;
            dcterms:creator ?manufacturer ;
            rdf:value ?sensitivity .
        }
      }
    """
  ] .

:CQ13 a sh:NodeShape ;
  sh:name "HVL PEI"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "What is the HVL PEI sensitivity of a given test?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?hvl_pei
      WHERE {
        FILTER NOT EXISTS {
          ?test a act:AntigenCovidTest .

          [] a ncit:C41394 ;
            dcterms:subject ?test ;
            dcterms:creator <https://www.pei.de> ;
            act:peiSensitivityCategory/skos:altLabel "high viral load"@en ;
            rdf:value ?hvl_pei .
        }
      }
    """
  ] .

:CQ14 a sh:NodeShape ;
  sh:name "Difference between total PEI sensitivity and manufacturer-declared sensitivity"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "What is the difference between the total PEI sensitivity of a given test and the sensitivity claimed by its manufacturer?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?difference
      WHERE {
        FILTER NOT EXISTS {
          SELECT (?pei_sensitivity - ?manufacturer_sensitivity AS ?difference)
          WHERE {
            ?test a act:AntigenCovidTest ;
              schema:manufacturer ?manufacturer .

            [] a ncit:C41394 ;
              dcterms:subject ?test ;
              dcterms:creator <https://www.pei.de> ;
              act:peiSensitivityCategory [] ; # TODO: What is "total sensitivity"?
              rdf:value ?pei_sensitivity .

            [] a ncit:C41394 ;
              dcterms:subject ?test ;
              dcterms:creator ?manufacturer ;
              rdf:value ?manufacturer_sensitivity .
          }
        }
      }
    """
  ] .

:CQ15 a sh:NodeShape ;
  sh:name "Manufacturer's tests with sensitivity degree higher than 3"@en ;
  sh:targetObjectsOf schema:manufacturer ;
  sh:sparql [
    sh:message "What percentage of tests from a given manufacturer has a degree of sensitivity higher than 3?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?percentage 
      WHERE {
        FILTER NOT EXISTS {
          SELECT (COUNT(?sensitivity_degree) / xsd:decimal(COUNT(DISTINCT ?test)) * 100 AS ?percentage)
          WHERE {
            ?test a act:AntigenCovidTest ;
              schema:manufacturer $this .

            OPTIONAL {
              [] a ncit:C41394 ;
                dcterms:subject ?test ;
                act:peiSensitivityDegree/skos:notation ?sensitivity_degree .

              FILTER (xsd:decimal(?sensitivity_degree) > 3)
            }
          }
        }
      }
    """
  ] .

:CQ16 a sh:NodeShape ;
  sh:name "SUKL-approved tests with PEI degree 5"@en ;
  sh:targetNode [] ;
  sh:sparql [
    sh:message "How many tests that are approved by SÚKL have a degree of 5 according to PEI?"@en ;
    sh:prefixes :prefixes ;
    sh:select """
      SELECT ?count
      WHERE {
        FILTER NOT EXISTS {
          SELECT (COUNT(DISTINCT ?test) AS ?count)
          WHERE {
            ?test a act:AntigenCovidTest .

            [] reg:representationOf ?test ;
              reg:register/dcterms:identifier "SUKL" .

            [] a ncit:C41394 ;
              dcterms:subject ?test ;
              dcterms:creator <https://www.pei.de> ;
              act:peiSensitivityDegree/skos:notation "5" .
          }
        }
      }
    """
  ] .

